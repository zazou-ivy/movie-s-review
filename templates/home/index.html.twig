{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	{% for item in items %}
		<div class="container py-3">
			<div class="card mb-3 shadow p-3 mb-5 bg-white rounded">
				<div class="row no-gutters">
					<div class="col-md-4">
						<img src="{{item.image}}" class="card-img" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{item.title}}
								<small>({{item.year}})</small>
							</h5>
							<p class="card-title">
								{{item.duration}}
							</p>
							<p class="card-text">RÃ©alisateur :
								{{item.director}}
							</p>
							<p class="card-text">Avec :
								{{item.actors}}
							</p>
							<p class="card-text">{{item.country}}
							</p>
							<p class="card-text">{{item.type}}
							</p>
							<p class="card-text">{{item.review | u.truncate(64, '...')}}</p>
							<a href="{{ path('content_from_id', {'id':item.id}) }}" class="btn btn-success">
								Lire la suite
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
